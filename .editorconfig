# https://editorconfig.org

# top-most EditorConfig file
root = false

# Unix-style newlines with a newline ending every file
[*]
charset = utf-8
end_of_line = lf
indent_size = 2
indent_style = space
insert_final_newline = true
trim_trailing_whitespace = true

# 4 space indentation
[*.py]
indent_style = space
indent_size = 4

[*.sh]
indent_style = space
indent_size = 2

# 2 space indentation
[*.tf]
indent_style = space
indent_size = 2

[*.hcl]
indent_style = space
indent_size = 2

[*.json]
indent_style = space
indent_size = 2

[*.{yml,yaml}]
indent_style = space
indent_size = 2

[*.md]
indent_style = space
indent_size = 2
max_line_width = 120

[*.go]
indent_style = tab

[Makefile]
indent_style = tab

[*.txt]
indent_style = space
indent_size = 2

